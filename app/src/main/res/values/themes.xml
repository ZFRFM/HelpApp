<resources>
        <style name="Base.Theme.SimbirSoftPractice" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.SimbirSoftPractice" parent="Base.Theme.SimbirSoftPractice" />

    <style name="Theme.SimbirSoftPractice.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SimbirSoftPractice.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SimbirSoftPractice.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance.FieldLabelText" parent="">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_view_grey</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="TextAppearance.FieldValueText" parent="">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_87</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="TextAppearance.ButtonText" parent="">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearance.FieldWithBigText" parent="">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black_87</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.DialogText" parent="">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black_87</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextAppearance.AppBarText" parent="">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.SearchView" parent="">
        <item name="android:editTextColor">#61000000</item>
        <item name="android:textColorHint">#61000000</item>
    </style>

    <style name="TabLayoutText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>